        <FIELD NAME="bannertext" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Text to display on the banner"/>
        <FIELD NAME="backgroundcolor" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false" COMMENT="Background color code"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>

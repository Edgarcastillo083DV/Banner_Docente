        <FIELD NAME="telefono" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="whatsapp" TYPE="char" LENGTH="50" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="link_grupo" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="info_adicional" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
